# for testing full newcode image under Bochs
#
# set megs to 32 for normal color.com, 1024 for newcode
megs: 1024
vga: extension=vbe
romimage: file=$BXSHARE/BIOS-bochs-latest
vgaromimage: file=$BXSHARE/VGABIOS-lgpl-latest
cpu: count=1, ips=100000000, reset_on_triple_fault=1
boot: floppy
floppya: 1_44="../test/b.img", status=inserted
#info: action=report
#debug: action=report
log: /tmp/bochs-cf.log
mouse: enabled=0
vga_update_interval: 150000
